<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#E9D7EF">
    <TextView
        android:id="@+id/currencyFrom"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="USD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/arrow"
        android:src="@android:drawable/arrow_down_float"
        app:layout_constraintLeft_toRightOf="@+id/currencyFrom"/>

    <TextView
        android:id="@+id/currencyTo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:text="CAD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/arrow"/>

    <TextView
        android:id="@+id/amountFrom"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="123.0"
        app:layout_constraintTop_toBottomOf="@+id/currencyFrom"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/amountTo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:text="333.0"
        app:layout_constraintTop_toBottomOf="@+id/currencyTo"
        app:layout_constraintLeft_toRightOf="@+id/arrow"/>


</androidx.constraintlayout.widget.ConstraintLayout>